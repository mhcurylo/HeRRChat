
@import 'common.styl'

@import './signaling/SignalingPad.styl'
@import './signals/Signals.styl'
@import './sources/Sources.styl';
@import './spaces/Spaces.styl';
@import 'scrollbars.styl'

body
    background base03
    font-family: 'Inconsolata'
    line-height 1rem

.chat
    base03
    center()
    max-width       786px
    color           base1

.chat__element
    border          0.2em solid orange
    border-radius   0.2em
    margin          0.9em
    padding         0.6em
    line-height     1em
    font-size       0.8em
    background      base02

.chat__element h4
    position        relative
    margin-bottom   0.8rem
    padding         0em
    margin-top      0.2em
    margin-left     -0.2em
    line-height     0em
    color           yellow

.chat__signals
    height          20em
    max-height      20em


.chat__spaces
    margin-bottom   0em
    border-bottom   0em none
    height          3.4em
    max-height      4em


.chat__sources
    margin-top      -0.2em
    border-top      0em none
    height          5em
    max-height      11em
    
.column--1of2
    span(1/2)
.column--1of1
    span(1/1)